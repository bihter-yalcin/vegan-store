
@model VeganStore.ViewModels.DetailsViewModel



<div class="thumbnail">
    <img alt="@Model.Product.ProductName" src="@Model.Product.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Product.Price</h3>
        <h3>
            <a href="#">@Model.Product.ProductName</a>
        </h3>
        <h4>@Model.Product.Description</h4>
        <p>@Model.Product.LongDescription</p>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.Product.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>
@model Product
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src=@Model.ImageThumbnailUrl style="width:175px; height:175px" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a style="font-size: 15px; " asp-controller="Product"
                   asp-action="Details"
                   asp-route-id="@Model.ProductId"
                   >@Model.ProductName</a>
            </h3>
            <p style="font-size: 15px; ">@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add to cart</a>

            </p>
            <p class="button">
                <a class="btn btn-success" asp-controller="Comment" asp-action="a" asp-route-id="@Model.ProductId">Comment</a>

            </p>


        </div>

    </div>
</div>
